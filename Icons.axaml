<Styles xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Design.PreviewWith>
        <Border Padding="20">
            <!-- Controls here -->
        </Border>
    </Design.PreviewWith>

    <Style Selector="TabControl">
        <Setter Property="Background" Value="#51515188"/>
        <Setter Property="CornerRadius" Value="5"/>
        <Setter Property="VerticalContentAlignment" Value="Stretch"/>
        <Setter Property="Padding" Value="10"></Setter>
    </Style>
    <Style Selector="TabControl WrapPanel">
        <Setter Property="Background" Value="#22222255"/>
        <Setter Property="Margin" Value="5"/>
    </Style>
    <Style Selector="TabItem">
        <Setter Property="FontSize" Value="24"/>
        <Setter Property="Height" Value="36"/>
        <Setter Property="Background" Value="#25252505"/>
        <Setter Property="Foreground" Value="#F5F5F5"/>
        <Setter Property="Padding" Value="50 0"/>
        <Setter Property="Margin" Value="0 0 0 0"/>
    </Style>

    <Style Selector="TabItem:focus">
        <Setter Property="Foreground" Value="#d3812a"/>
        <Setter Property="Margin" Value="0 0 0 0"/>
    </Style>
    <Style Selector="TabItem:pointerover">
        <Setter Property="Foreground" Value="#e8a155"/>
        <Setter Property="Background" Value="#454545"/>
        <Setter Property="Margin" Value="0 0 0 0"/>
    </Style>
    <Style Selector="TabItem:selected">
        <Setter Property="Foreground" Value="#d3812a"/>
        <Setter Property="Background" Value="#343434"/>
        <Setter Property="Margin" Value="0 0 0 0"/>
    </Style>

    <Style Selector="TextBlock.h1">
        <Setter Property="FontSize" Value="24"/>
    </Style>
    <Style Selector="TextBox">
        <Setter Property="TextAlignment" Value="Center"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
    </Style>
    <Style Selector="TabControl.center">
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
    </Style>
    <Style Selector="TabItem.top">
        <Setter Property="CornerRadius" Value="5 5 0 0 "/>
    </Style>
    <Style Selector="TabItem.list">
        <Setter Property="HorizontalContentAlignment" Value="Left"/>
    </Style>
    <Style Selector="TabItem.firstChild">
        <Setter Property="CornerRadius" Value="7 7 0 0"/>
    </Style>
    <Style Selector="TabItem.lastChild">
        <Setter Property="CornerRadius" Value="0 0 7 7"/>
    </Style>
    <Style Selector="Grid">
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="VerticalAlignment" Value="Stretch"/>
        <Setter Property="ShowGridLines" Value="False"/>
        <Setter Property="Margin" Value="4"/>
    </Style>
    <Style Selector="ListBoxItem">
        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
    </Style>

    <!-- Button Styles -->
    <Style Selector="Button.positiveOperation">
        <Setter Property="Background" Value="#58a54c"/>
    </Style>
    <Style Selector="Button.positiveOperation:pointerover /template/ ContentPresenter#PART_ContentPresenter">
        <Setter Property="Background" Value="#6fce61"/>
    </Style>
    <Style Selector="Button.positiveOperation:pressed /template/ ContentPresenter#PART_ContentPresenter">
        <Setter Property="Background" Value="#6fce61"/>
    </Style>

    <Style Selector="Button.negativeOperation">
        <Setter Property="Background" Value="#a54c4c"/>
    </Style>
    <Style Selector="Button.negativeOperation:pointerover /template/ ContentPresenter#PART_ContentPresenter">
        <Setter Property="Background" Value="#dd4444"/>
    </Style>
    <Style Selector="Button.negativeOperation:pressed /template/ ContentPresenter#PART_ContentPresenter">
        <Setter Property="Background" Value="#dd4444"/>
    </Style>

    <Style Selector="Button.infoOperation">
        <Setter Property="Background" Value="#4c7ea5"/>
    </Style>
    <Style Selector="Button.infoOperation:pointerover /template/ ContentPresenter#PART_ContentPresenter">
        <Setter Property="Background" Value="#3f93d3"/>
    </Style>
    <Style Selector="Button.infoOperation:pressed /template/ ContentPresenter#PART_ContentPresenter">
        <Setter Property="Background" Value="#3f93d3"/>
    </Style>

